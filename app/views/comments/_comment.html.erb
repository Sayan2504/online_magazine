<li>
  <div class="card card-body justify-content-flex-center">
    <div class="row comment-card">
      <div class="col-sm-12">
        <strong><%= comment.commenter %>:</strong>
        <%= comment.comment %>
        <small id="submitted_time_duration">Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>
      </div>
    </div>
  </div>
    
  <div class="row">
    <div class="col-sm-12">
      <%= form_for [comment, Comment.new] do |f| %>
        <div class="form-row pb-0">
          <div class="form-group col-sm-12 col-md-3">
            <%= f.text_field :commenter, class: "form-control", autofocus: true, required: true, autocomplete: :off, placeholder: "Enter your name to reply", title: "Enter your name", maxlength: 50, minlength: 2 %>
          </div>
          <div class="form-group col-sm-12 col-md-7">
            <%= f.text_field :comment, class: "form-control", autofocus: true, required: true, autocomplete: :off, placeholder: "Add a reply", title: "Write your reply here", minlength: 2 %>
          </div>
          <div class="col-xs-12 text-left col-sm-2">
            <%= f.submit "Reply", class: "btn btn-secondary btn-xs-block", title: "Reply to the comment", data: { disable_with: "Replying..." } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-12 ">
      <ul class="comment-list">
        <%= render partial: "comments/comment", collection: comment.comments %>
      </ul>
    </div>
  </div>
</li>